<div class="row" style="background: #F8F8F8;">
     <div class="col-2 min-vh-100" style="padding-right: 0% !important;">
        <div class="d-flex justify-content-center" id="menu">
            <div class="nav flex-column align-items-start nav-pills me-0 mt-4" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <%= button_to "Manage Photos", admin_manage_photos_path , method: :get , class: 'nav-link', id: 'v-pills-home-tab'%>
                <%= button_to "Manage Albums", admin_manage_albums_path , method: :get , class: 'nav-link active', id: 'v-pills-profile-tab'%>
                <%= button_to "Manage Users", admin_manage_users_path , method:  :get , class: 'nav-link', id: 'v-pills-messages-tab'%>
            </div>
        </div>
    </div>
    <div id="editForm" class="tab-content col-8 bg-white mt-3 mb-5 container">
        <div id="title-edit" class="row">
            <div class="col-10 pr-0">
                <h2 class="border-bottom py-2">Edit Album</h2>
            </div>
            <div class="col-2 pl-0 text-right">
                <div class="border-bottom py-3">
                    <%= button_to "Back", admin_albums_path , method: :get , class: 'btn btn-3C5999'%>
                </div>
            </div>
        </div>
        <div id="formEditAlbum">
            <%= render "form", album: @album %>
        </div>
    </div>
    <div class="col-2">
    </div>
</div>
